<h1>Listing letters</h1>

<table>
  <tr>
    <th>Date Written</th>
    <th>Author</th>
    <th>Letter</th>
    <th>Owner</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @letters.each do |letter| %>
  <tr>
    <td><%= letter.datewritten %></td>
    <td><%= letter.author %></td>
    <td><%= letter.letter.split.slice(0, 8).join(" ") -%>...</td>
    <td><%= link_to "#{letter.user.name}", letter.user %></td>
    <td><%= link_to 'Show', letter %></td>
    <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
    <td><%= link_to 'Destroy', letter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

